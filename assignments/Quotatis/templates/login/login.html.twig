{% extends "layout_signed_out.html.twig" %}

{% block layout_content %}
    <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
        <div class="d-table-cell align-middle">

            <div class="text-center mt-4">
                <div class="text-center">
                    <img src="{{ asset("build/images/logo.svg") }}" alt="Quotatis logo" class="img-fluid mb-2"
                         width="70" height="70"/>
                </div>
                <p class="lead">
                    {{ t("Sign in to your account to continue")|trans }}
                </p>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="m-sm-4">
                        <form method="post">
                            {% if error %}
                                <div class="mb-3">
                                    <div
                                        class="alert alert-danger p-2">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                </div>
                            {% endif %}

                            <div class="mb-3">
                                <label class="form-label">{{ t("Email")|trans }}</label>
                                <input class="form-control form-control-lg" type="email" name="email" required
                                       placeholder="{{ t("Enter your email")|trans }}" value="{{ last_username }}"/>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">{{ t("Password")|trans }}</label>
                                <input class="form-control form-control-lg" type="password" name="password" required
                                       placeholder="{{ t("Enter your password")|trans }}"/>
                            </div>
                            <div class="text-center mt-3">
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                />
                                <button type="submit" class="btn btn-lg btn-primary">{{ t("Sign in")|trans }}</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
